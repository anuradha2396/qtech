<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Question Bank</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
	</head>
<body class="wow fadeIn">
					
	<!-- sidebar start -->
	<aside class="side-nav wow slideInLeft" id="sidenav">
		<ul class="categories">
			<li>
				<a href="javascript:void(0)" title="Dashboard">
					<i class="fa fa-dashboard"></i><span>Dashboard</span></a>
			</li>
			<li class="drop">
				<a href="javascript:void(0)" title="Question Bank" class="active-dashlink">
					<span class="fa  fa-pencil-square"></i><span>Question Bank</span></a>
				<ul class="side-nav-dropdown">
					<li><a href="javascript:void(0)" title="Subjects" class="sub-active-dashlink">
						<i class="fa fa-book sub-icon"></i>Subjects</a></li>
					<li><a href="/topics/topic" title="Topics">
						<i class="fa fa-file sub-icon"></i>Topics</a></li>
					<li><a href="questions/question" title="Question Type">
						<i class="fa fa-briefcase sub-icon"></i>Question Type</a></li>
					<li><a href="objectices/objective" title="Objective Question">
						<i class="fa fa-file-text sub-icon"></i>Objective Question</a></li>
			   </ul>
			</li>
			<li>
				<a href="javascript:void(0)" title="Exam Creation">
					<i class="fa fa-pencil-square-o"></i><span>Exam Creation</span></a>
		   </li>
		   <li>
			   <a href="/schedules/schedule" title="Exam Scheduler">
				   <i class="fa fa-calendar"></i><span>Exam Scheduler</span></a>
		   </li>
		   <li>
			   <a href="/candidates/candidatedata" title="Candidate Data">
				   	<i class="fa fa-users"></i><span>Candidate Data</span></a>
		   </li>
		   <li>
			   <a href="candidates/candidatedata" title="Candidate Result">
				    <i class="fa fa-check-square"></i><span>Candidate Result</span></a>
		   </li>
		  
		   <li>
			   <a href="javascript:void(0)" class="side-link" title="Logout">
				   <i class="fa fa-sign-out side-icon"></i><span>Logout</span></a>
		   </li>
		</ul>
		<div class="nav-btn">
			<a class="open-nav" id="open" onclick="openSideBar()" title="Click to open"> 
				<i class="fa fa-angle-double-right open-icon"></i>
			</a>
			<a class="cls-btn" id="close" onclick="closeSideBar()" title="click to close"> 
				 <i class="fa fa-angle-double-left cls-icon"></i>
			</a>
		</div>	
	</aside>
	<!-- sidebar end -->
	
	<!--main content start-->
	<main id="main">
		<div class="dash-content">
			<div class="page-indicator">
				<a class="indicate-arrow" href="javascript:void(0)" title="Dashboard"><i class="fa fa-home"></i></a>
				<span class="indicate-arrow">Question Bank</span>
				<span>Subject</span>
			</div>
			<div class="subject-container">
				<div class="button-input-container">
					<div class="button-section">
						<button class="btn add-new" data-toggle="modal" data-target="#new_subject-Modal"><i class="fa fa-plus-circle "></i>New</button>
						<button class="btn action">Delete<i class="fa fa-minus-circle"></i></button>
					</div>
					<div class="search">
						<div>
							<input type="text" placeholder="   Search " required>
						 </div>
					</div>
				</div>
				<div class="total-section">
					<div class="total-img">
						
						<%= image_tag('total.png', :alt => "subject", :class => 'img-responsive') %>
					</div>
					<div class="total-content">
						<p>Total Subjects :</p>
						<span>1</span>
					</div>
				</div>
				<div class="subject-table">
					<table class="table">
					
						<thead class="t-head">
							<tr>
							<th><input type="checkbox" name="subject-check"></th>
								<th>Subject Name</th>
								<th>Edit</th>
							</tr>
						</thead>

						<tbody class="t-body">
							<% @sub.each do |subject| %>
							<tr>
							<td><input type="checkbox" name="subject-check"></td>
							<td><%= subject.name %></td>
							<td ><%= link_to "Delete",@topic_path, :method => :delete, :data => {:confirm => "You Sure?"} %></td> 
							</tr>
							
							<% end %> 
							</tr>
						</tbody>

					</table>
				</div>
			</div>
			
			<!--Update subject modal start-->
			<div class="modal fade" id="update_subject-Modal" role="dialog">
				<div class="subject-modal wow slideInDown">
					<div class="modal-content">
						<div class="subject-modal-container">
							<button type="button" class="close modal-close-btn" data-dismiss="modal">&times;</button>
							<div class="subject-modal-indicator">
								<span> <i class="fa fa-pencil"></i> Subject Edit</span>
							</div>
							<div class="subject-modal-content">
								<div class="subject-modal-heading">Update Subject</div>
								<form method="get" action="/update">
									<div class="modal-subject-input">
										<div class="text-input">
											<input type="text" name="subject[name]" class="form-control">
											<label for="input1">Subject Name</label>
										</div>
									</div>
									<div class="subject-modal-button">
										<button type="submit" class="btn save-btn">Save</button>
										<button type="submit" class="btn cancel-btn">Cancel</button>
									</div>	
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!--Update subject modal end-->
			
			<!--create new subject modal start-->
			<div class="modal fade" id="new_subject-Modal" role="dialog">
				<div class="subject-modal wow slideInDown">
					<div class="modal-content">
						<div class="subject-modal-container">
							<button type="button" class="close modal-close-btn" data-dismiss="modal">&times;</button>
							<div class="subject-modal-indicator">
								<span><i class="fa fa-file"></i>Subject new</span>
							</div>
							<div class="subject-modal-content">
								<div class="subject-modal-heading">Create New Subject</div>
								<form method="post" action="/create">
									<div class="modal-subject-input">
										<div class="text-input">
											<input type="text" name="subject[name]" class="form-control">
											<label for="input1">Subject Name</label>
										</div>
									</div>
									<div class="subject-modal-button">
										<button type="submit" class="btn save-btn">Save</button>
										<button type="submit" class="btn cancel-btn">Cancel</button>
									</div>	
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!--create new subject modal end-->
		</div>
	</main>
	<!--main content end-->

<script src="js/index.js"></script>	
<script src="js/wow.js"></script>
<script>
   new WOW().init();
</script>	
</body>
</html>
